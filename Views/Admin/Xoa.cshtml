@model BookStore.Models.Sach

@{
    ViewBag.Title = "Xoa";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN SÁCH CẦN XÓA</h2>

<h3>Bạn quyết định xóa quyển sách này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã sách:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSach)
        </dd>

            <dt>
                Tên sách:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenSach)
            </dd>

            <dt>
                Giá bán:
            </dt>

            <dd>
                @String.Format("{0:0,0}", Model.GiaBan) VNĐ
            </dd>

            <dt>
                Mô tả:
            </dt>

            <dd style="width:600px; text-align:justify">
                @Html.DisplayFor(model => model.MoTa)
            </dd>

            <dt>
                Ảnh bìa:
            </dt>

            <dd>
                <img src="@Url.Content("~/HinhAnhSP/"+Model.AnhBia)" width="120px" />
            </dd>

            <dt>
                Ngày cập nhật:
            </dt>

            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
            </dd>

            <dt>
                Số lượng tồn:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoLuongTon)
            </dd>

            <dt>
                Nhà xuất bản:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)
            </dd>

            <dt>
                Chủ đề:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ChuDe.TenChuDe)
            </dd>      

    </dl>
    </div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>


