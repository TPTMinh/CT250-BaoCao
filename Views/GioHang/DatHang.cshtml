@using BookStore.Models;
@model List<GioHang>

@{
    ViewBag.Title = "ĐƠN ĐẶT HÀNG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="gio_hang">
    <h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
    <table align="center" border="1">
        <tr style="text-align:center;font-weight:bold">
            <td> Mã Sách</td>
            <td> Tên Sách</td>
            <td> Ảnh Bìa</td>
            <td> Số Lượng</td>
            <td> Đơn Giá</td>
            <td> Thành Tiền</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.iMaSach</td>
                <td>@item.sTenSach</td>
                <td><img src="~/HinhAnhSP/@item.sAnhBia" /></td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMaSach }))
                {
                    <td>
                        @item.iSoLuong
                    </td>
                    <td>@String.Format("{0:0,0}", item.dDonGia)</td>
                    <td>@String.Format("{0:0,0}", item.ThanhTien)</td>

                }
            </tr>
        }
        <tr class="tong_tien">
            <td colspan="7">Số lượng sách: @ViewBag.TongSoLuong</td>
            <td colspan="5">Tổng tiền: @String.Format("{0:0,0}", ViewBag.TongTien) VND</td>
        </tr>
    </table>
 </div>
<div class="thong_tin_dat_hang">
    <h2>THÔNG TIN ĐẶT HÀNG</h2>
    @{
        KhachHang kh = (KhachHang)Session["Taikhoan"];
    }
    <table align="center">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr>
                <td>Họ tên khách hàng</td>
                <td>@kh.HoTen</td>
            </tr>
            <tr>
                <td>Địa chỉ</td>
                <td> @kh.DiaChi </td>
            </tr>
            <tr>
                <td>Điện thoại</td>
                <td> @kh.DienThoai </td>
            </tr>
            <tr>
                <td>Ngày đặt</td>
                <td> @DateTime.Now.ToShortDateString() </td>
            </tr>
            <tr>
                <td>Ngày giao hàng</td>
                <td>
                    <input type="date" name="Ngaygiao" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="Submit" value="Đồng ý đặt hàng" />
                </td>
            </tr>
        }
    </table>
</div>